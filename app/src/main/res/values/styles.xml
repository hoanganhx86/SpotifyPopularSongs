<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/color_icon_highlighted</item>
        <item name="colorControlNormal">@color/color_icon_highlighted</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorActivatedHighlight">@color/white</item>
        <item name="android:textColorSecondary">@color/color_icon_highlighted</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.TextViewTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/margin_normal_vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal_vertical</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextViewSubTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/margin_normal_vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal_vertical</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/black</item>=
    </style>

</resources>
